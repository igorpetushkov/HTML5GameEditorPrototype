{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "jsx" : "react",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "classic",
    "noImplicitAny": false, 
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots" : ["./node_modules/@types"],
    "types": [ "jquery", "react", "react-dom", "node", "redux", "react-redux", "redux-thunk" ]
  },
  "exclude": [
    "node_modules"
  ]
}